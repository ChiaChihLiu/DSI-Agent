{
  "table_name": "netsuite.optw_dw_dsi_monthly_data_v",
  "domain": "Sales & Inventory",
  "description": "存放銷售預測、採購預測及實際銷售的數據表，為 DSI 分析的核心。",
  "columns": [
    {
      "name": "period",
      "type": "VARCHAR",
      "description": "會計期間，格式為 'YYYYMM'。例：'202401'。",
      "is_primary_key": false
    },
    {
      "name": "section",
      "type": "VARCHAR",
      "description": "數據類別。'TOTAL SALES' 為實際業績，'Sales Forecast' 為銷售預測。",
      "example_values": ["TOTAL SALES", "Sales Forecast", "Purchase Forecast"]
    },
    {
      "name": "value",
      "type": "NUMERIC",
      "description": "金額或數量值。"
    }
  ],
  "relationships": [
    {
      "to_table": "netsuite.optw_dw_dsi_model",
      "join_on": "primary_model"&"secondary_model",
      "description": "關聯產品主檔以獲取品名與規格。"
    }
  ]
}
